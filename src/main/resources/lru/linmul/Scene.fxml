<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane fx:id="anchorPane" prefHeight="333.0" prefWidth="644.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lru.linmul.SceneController" stylesheets="@Scene.css">
   <children>
      <HBox alignment="CENTER" layoutY="5.0" prefHeight="34.0" prefWidth="644.0" spacing="60.0" style="-fx-background-color: #94d4ff;">
         <children>
            <TextField fx:id="parkingField" onKeyTyped="#handleParkingNameFilter" promptText="Nom du Parking" />
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="356.0" spacing="10.0">
               <children>
                  <RadioButton fx:id="all" mnemonicParsing="false" onAction="#handleRadioFilter" selected="true" text="Tous">
                     <toggleGroup>
                        <ToggleGroup fx:id="Filter" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="lessOccupied" mnemonicParsing="false" onAction="#handleRadioFilter" text="Moins de place libre" toggleGroup="$Filter" />
                  <RadioButton fx:id="mostOccupied" mnemonicParsing="false" onAction="#handleRadioFilter" text="Plus de place libre" toggleGroup="$Filter" />
               </children>
            </HBox>
         </children></HBox>

      <WebView fx:id="mapView" layoutX="14.0" layoutY="59.0" prefHeight="215.0" prefWidth="272.0" />

      <TableView fx:id="parkingTableView" cache="true" layoutX="307.0" layoutY="59.0" prefHeight="215.0" prefWidth="323.0">
         <columns>
            <TableColumn fx:id="nameColumn" prefWidth="164.0" text="Nom" />
            <TableColumn fx:id="curPlaceColumn" prefWidth="81.0" text="Place Libre" />
            <TableColumn fx:id="totalPlaceColumn" prefWidth="77.0" text="Place Total" />
         </columns>
      </TableView>

      <Button layoutX="543.0" layoutY="294.0" onAction="#handleImportButton" style="-fx-background-color: #4eb8ff;" text="Importer CSV" />
      <Label fx:id="filePathLabel" layoutX="14.0" layoutY="298.0" prefHeight="17.0" prefWidth="516.0" text="Aucun fichier sélectionné" />
   </children>
</AnchorPane>
